# Rename this file to .env and fill values.
SECRET_KEY=change-this-secret-key
# For SQLite, you can leave DATABASE_URL empty to use default sih_auth.db
# DATABASE_URL=sqlite:///sih_auth.db

# SMTP settings (optional for demo; if not set, OTP prints in console)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_USE_TLS=true
MAIL_USE_SSL=false
SENDER_EMAIL=your_email@gmail.com
